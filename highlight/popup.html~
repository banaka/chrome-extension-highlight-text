<!doctype html>
<html>
  <head>
    <title>Highlight text</title>
    <script>
	var setting = {"color": "red"};
    </script>
    <script>
	function setColor(color){
		chrome.tabs.getSelected(null, function(tab) {
		  chrome.tabs.sendMessage(tab.id, {"color": color}, function(response) {
		    console.log(response.farewell);
		  });
		});
	console.log(color);
	return false;
	}
    </script>
  </head>
  <body>
<ul>
  <li><a href='#' onclick="setColor('yellow');">Yellow</a></li>
  <li><a href='#' onclick="setColor('red');">Red</a></li>
  <li><a href='#' onclick="setColor('purple;')">Purple</a></li>
  <li><a href='#' onclick="setColor('blue');">Blue</a></li>
</ul>
  </body>
